// הגדרות כלליות של Prisma
generator client {
  provider = "prisma-client-js"
}

// חיבור לבסיס הנתונים (PostgreSQL ב-Neon)
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- מודלים ---

// מודל משתמש (User)
model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  image     String?
  password  String?
  role      Role     @default(USER) // USER ללקוחות, ADMIN עבורך

  // קשר לפוסטים: משתמש אחד יכול לכתוב הרבה פוסטים
  posts     Post[]

  // שדות זמן אוטומטיים
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([email])
}

// מודל פוסט (Post)
model Post {
  id        String   @id @default(cuid())
  title     String
  content   String?  @db.Text
  published Boolean  @default(true)
  
  // הגדרת הקשר למשתמש (הכותב)
  author    User     @relation(fields: [authorId], references: [id])
  authorId  String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([authorId])
}

// מודל מוצר (Product)
model Product {
  id          String    @id @default(cuid())
  name        String    // שם המוצר
  description String?   @db.Text // תיאור ארוך
  price       Float     // מחיר
  image       String?   // קישור לתמונה
  isActive    Boolean   @default(true) // האם להציג באתר
  isFeatured  Boolean   @default(false) // האם להציג ב"מוצרים נבחרים"

  // קשר לקטגוריה
  category    Category? @relation(fields: [categoryId], references: [id])
  categoryId  String?

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([categoryId])
}

// מודל קטגוריה (Category)
model Category {
  id        String    @id @default(cuid())
  name      String    @unique
  products  Product[] // רשימת המוצרים בקטגוריה זו

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

// --- Enums ---

enum Role {
  USER
  ADMIN
}